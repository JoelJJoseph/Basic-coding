//main section
#include<iostream.h>
#include<conio.h>
void main()
{
clrscr();
int age,salary,years;
boolean exper=false;                                                  //use boolean for no confusion  
//cout<<"The person is experinced?"<<"Enter 1 for yes,0 for No:";    //use it as a single string
cout<<"Experience of a person: ";
cin>>years;
exper=years>0?true:false;
cout<<"Enter age of a person:";
cin>>age;
if(age<0 || years<0){
  exit(0);
 }

salary=(exper)?((age>35)?6000:(age>28)?4800:3000):2000;
cout<<"The salary of the person is"<<salary<<"\n";                              //use of ternary operator
getch();                                                                        //add this if using turbo c++ to hold the screen
}
//end of code
